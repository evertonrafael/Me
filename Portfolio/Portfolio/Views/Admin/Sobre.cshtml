@{
    ViewBag.Title = "Sobre";
}


@Html.Action("MenuSideBar", "Admin")

<div class="container-fluid">
    <main>
        <div class="row">
            <div class="col s12">
                <div class="section">
                    <h4>Sobre mim</h4>
                    @*<p>Novo post</p>*@
                </div>
                <div class="divider"></div>
            </div>
        </div>
        <div class="row">
            <div class="col s12 m6">
                <div class="input-field col s12">
                    <input id="last_name" type="text" class="validate">
                    <label for="last_name">Título</label>
                </div>
                <div class="input-field col s12">
                    <textarea id="textarea1" class="materialize-textarea" length="1000"></textarea>
                    <label for="textarea1">Descrição</label>
                </div>
            </div>
            <div class="col s12 m6">
                <h5>Foto</h5>
                <div class="switch">
                    <label>
                        Off
                        <input type="checkbox">
                        <span class="lever"></span>
                        On
                    </label>
                </div>
                <form action="#">
                    <div class="file-field input-field">
                        <input class="file-path validate" type="text" disabled="disabled" />
                        <div class="btn">
                            <span>File</span>
                            <input type="file" disabled="disabled" />
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </main>
</div>
